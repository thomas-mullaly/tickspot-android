<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LoginFormContainer" >
        <item name="android:layout_width">
            match_parent
        </item>
        <item name="android:layout_height">
            wrap_content
        </item>
        <item name="android:padding">
            16dp
        </item>
    </style>

    <style name="DrawerListItemBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="DrawerListItem" parent="DrawerListItemBase">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DrawerList">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@drawable/abs__ab_solid_dark_holo</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@android:color/darker_gray</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:layout_width">@dimen/drawer_list_layout_width</item>
    </style>
</resources>
